{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "swc",
    "typeCheck": true,
    "plugins": ["@nestjs/swagger"]
  },
  "watchOptions": {
    "watchFile": "priorityPolling",
    "excludeFiles": ["dist/**/*", "node_modules/**/*", ".git/**/*"]
  }
}
